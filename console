global.config = require('./config');

var args = process.argv.slice(2);

try {
  var task = require(__dirname + '/tasks/' + args[0]);
  if (typeof task[args[1]] == 'function') {
    var params = args.slice(2);
    task[args[1]].apply(null, params);
  } else {
    consoleWithTime('Function ' + args[1] + ' does not exist.');
  }
}
catch(e) {
  consoleWithTime('That task or function does not exist. Error: ', e);
}
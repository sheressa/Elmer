global.config = require('./config');

var tasks = require('require-all')(__dirname + '/tasks');

var args = process.argv.slice(2);

for (var i in tasks) {
    if (i == args[0]) {
        if (typeof tasks[i][args[1]] == 'function') {
            var params = args.slice(2);
            tasks[i][args[1]].apply(null, params);
        } else {
            console.log('Funtion ' + args[1] + ' does not exist.');
        }
    }
}

